<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Ascanio{% endblock %}</title>
        <link rel="shortcut icon" href="{{ asset('assets/favicon.ico') }}" type="image/x-icon">
        <link rel="stylesheet" href="{{ asset('assets/bootstrap/css/bootstrap.min.css') }}">
        {{ encore_entry_link_tags('app') }}
        <link rel="stylesheet" href="{{ asset('assets/fontawesome/css/all.min.css') }}">
        {% block stylesheets %}
            {# ajouts éventuels qui pourront être écrasés #}
        {% endblock %}
    </head>
    <body>
        <div class="container-fluid p-0">
            <div class="ui">
                <nav class="navbar app">Ascanio</nav>
                <nav class="navbar board bg-dark pt-0" id="second_navbar">
                    <h1 class="pt-2"><a href="{{ path('home_page') }}">Trello</a></h1>
                    <div id="main_alert_container" class="m-0 p-0">
                        {# read and display all flash messages #}
                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label }} col-12 m-0 py-1 px-2" role="alert">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                </nav>

            {% block body %}
                {# Contenu propre à chaque page #}
            {% endblock %}

            <script src="{{ asset('assets/jquery/jquery.min.js') }}"></script>
            <script src="{{ asset('assets/bootstrap/js/bootstrap.min.js') }}"></script>
            {{ encore_entry_script_tags('app') }}
            {% block javascripts %}
                {# ajouts éventuels qui pourront être écrasés #}
            {% endblock %}
            </div>
        </div>
    </body>
</html>
